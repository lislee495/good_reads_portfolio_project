

  <h1>All Books</h1>
</div>

  <table class="table">
    <thead>
      <tr>
      <th>#</th>
      <th>Book Name:</th>
      <th>Book Author:</th>
      <th>Genre:</th>
      <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%=book.id%></td>
        <td><a href="/books/<%=book.slug%>"><%=book.name%></a></td>
        <td><a href="/authors/<%=book.author.slug%>"><%=book.author.name%></td>
        <td><a href="/genres/<%=book.genre.slug%>"><%=book.genre.name%></td>
          <% if book.owner == current_user %>
        <td><a href="/books/<%=book.slug%>/edit">Edit</a></td>
        <% end %>
      </tr>
      <%end%>
    </tbody>
  </table>
  <a class="btn btn-primary btn-lg btn-block" href="/books/new" role="button">Create a Book</a>
