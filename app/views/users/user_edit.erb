<h1>Edit My Books</h1>

<h2>My Books:</h2>
<table>
  <tr>
    <th>Book:</th>
    <th>Author:</th>
    <th>Genre:</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @user.books.each do |book| %>
  <tr>
    <td><%=book.name%></td>
    <td><%=book.author%></td>
    <td><%=book.genre%></td>
    <td><form action="/<%=book.id%>/show" method="post">
      <input type="submit" name="Show" value="Show">
    </form></td>
    <td><form action="/<%=book.id%>/edit" method="post">
      <input type="submit" name="Edit" value="Edit">
    </form></td>
    <td><form action="/users/<%=@user.slug%>/<%=book.id%>/delete" method="post">
      <input type="submit" name="Delete" value="Delete">
    </form></td>
    <!-- can put extra functionality in the table, show, edit, remove  -->
  </tr>
  <% end%>
</table>
